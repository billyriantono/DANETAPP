<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10"
        android:useLevel="false">

        <size
            android:width="@dimen/splash_spinner_width"
            android:height="@dimen/splash_spinner_height" />
        <gradient
            android:angle="0"
            android:centerColor="@color/green_light_transparent_50"
            android:endColor="#9aca3c"
            android:startColor="@android:color/transparent"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>