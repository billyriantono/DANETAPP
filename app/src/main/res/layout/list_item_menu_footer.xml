<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutListItemMenuFooter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_list_item_special_item_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewListItemMenuFooterSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_list_item_separator_height"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@color/transparent_white_20" />

    <TextView
        android:id="@+id/textViewListItemMenuFooterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageViewListItemMenuFooterIcon"
        android:layout_marginLeft="67dp"
        android:gravity="left|center_vertical"
        android:hint="@string/hint_menu_item"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="-4dp" />

    <ImageView
        android:id="@+id/imageViewListItemMenuFooterIcon"
        android:layout_width="20.9dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16.5dp"
        android:contentDescription="@string/app_name" />

</RelativeLayout>