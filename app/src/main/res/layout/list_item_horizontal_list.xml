<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutHorizontalListItem"
    android:layout_width="@dimen/horizontal_list_item_image_width"
    android:layout_height="@dimen/horizontal_list_item_image_height"
    android:background="@drawable/border_green"
    android:orientation="vertical"
    android:padding="1dp">

    <ImageView
        android:id="@+id/imageViewHorizontalListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/horizontal_list_item_image_width"
        android:layout_height="@dimen/horizontal_list_item_gradient_height"
        android:layout_alignBottom="@+id/imageViewHorizontalListItem"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/gradient_bottom_top" />

    <TextView
        android:id="@+id/textViewExtend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/horizontal_list_item_title_font_size"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/border_dash_circle"
        android:text="Xem thÃªm" />

    <TextView
        android:id="@+id/textViewHorizontalListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewHorizontalListItem"
        android:layout_alignLeft="@+id/imageViewHorizontalListItem"
        android:layout_alignRight="@+id/imageViewHorizontalListItem"
        android:layout_alignStart="@+id/imageViewHorizontalListItem"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:hint="@string/hint_product_title"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/horizontal_list_item_title_font_size" />

</RelativeLayout>